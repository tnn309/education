@model EducationSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<h2>Đăng nhập</h2>

<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="alert alert-error"></div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe"></label>
    </div>
    <div class="form-group">
        <button type="submit">Đăng nhập</button>
    </div>
    <p>
        Chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký ngay</a>.
    </p>
</form>
