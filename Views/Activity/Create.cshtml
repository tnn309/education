@model EducationSystem.Models.Activity

@{
    ViewData["Title"] = "Tạo hoạt động mới";
}

<h2>Tạo hoạt động mới</h2>

<form asp-controller="Activity" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="alert alert-error"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="5"></textarea>
        <span asp-validation-for="Description" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type">
            <option value="free">Miễn phí</option>
            <option value="paid">Trả phí</option>
        </select>
        <span asp-validation-for="Type" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxParticipants"></label>
        <input asp-for="MaxParticipants" type="number" />
        <span asp-validation-for="MaxParticipants" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinAge"></label>
        <input asp-for="MinAge" type="number" />
        <span asp-validation-for="MinAge" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxAge"></label>
        <input asp-for="MaxAge" type="number" />
        <span asp-validation-for="MaxAge" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Skills"></label>
        <input asp-for="Skills" />
        <span asp-validation-for="Skills" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Requirements"></label>
        <input asp-for="Requirements" />
        <span asp-validation-for="Requirements" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" type="time" />
        <span asp-validation-for="StartTime" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" type="time" />
        <span asp-validation-for="EndTime" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <select asp-for="TeacherId" asp-items="@(new SelectList(ViewBag.Teachers, "TeacherId", "FullName"))">
            <option value="">-- Chọn giáo viên --</option>
        </select>
        <span asp-validation-for="TeacherId" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <button type="submit">Tạo hoạt động</button>
    </div>
</form>
